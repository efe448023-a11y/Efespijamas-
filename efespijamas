<script>
let cart = [];

function addToCart(name, price){
    cart.push({name, price});
    renderCart();
}

function renderCart(){
    let items = "";
    let total = 0;
    cart.forEach(i=>{
        items += i.name + " - " + i.price + " TL<br>";
        total += i.price;
    });
    document.getElementById("items").innerHTML = items;
    document.getElementById("total").innerText = total;
}

function order(){
    let text = "Merhaba, sipariÅŸ vermek istiyorum:%0A";
    cart.forEach(i=>{
        text += "- " + i.name + " ("+i.price+" TL)%0A";
    });
    text += "%0AToplam: " + document.getElementById("total").innerText + " TL";

    window.open("https://wa.me/905375793857?text="+text);
}
</script>

